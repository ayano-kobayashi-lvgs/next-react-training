{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "dom.iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "module": "ESNext",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "baseUrl": "./",
    //"rootDir": "./",
    //"outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@components/*": [
        "./components/*"
      ],
      "@styles/*": [
        "./styles/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
